pipeline {
    agent any
    tools {
        jdk 'jdk21'
    }
    stages {
        stage('Debug Java') {
            steps {
                sh 'which java'
                sh 'java -version'
                sh 'which javac'
                sh 'javac -version'
            }
        }

        stage('Build') {
            steps {
                dir('atelier22') {
                    sh 'mvn clean compile'
                }
            }
        }
    }
}

